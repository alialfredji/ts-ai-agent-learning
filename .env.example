# Model Provider Configuration
# Choose: openai | anthropic | google
MODEL_PROVIDER=openai

# API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=...

# Model Names (optional overrides)
# OPENAI_MODEL=gpt-4-turbo-preview
# ANTHROPIC_MODEL=claude-3-opus-20240229
# GOOGLE_MODEL=gemini-pro

# LangSmith (optional observability)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=...
LANGCHAIN_PROJECT=ai-agents-curriculum

# Database (for RAG projects)
DATABASE_URL=postgresql://user:password@localhost:5432/agents_db

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=ai-agent

# Security & Rate Limiting
MAX_TOKENS_PER_REQUEST=4000
RATE_LIMIT_PER_MINUTE=60
ENABLE_BUDGET_GUARD=true
MAX_COST_PER_DAY=10.00

# Convex (for background workers)
# CONVEX_DEPLOYMENT=...
# CONVEX_DEPLOY_KEY=...

# GitHub (for PR reviewer)
# GITHUB_TOKEN=...
# GITHUB_WEBHOOK_SECRET=...
